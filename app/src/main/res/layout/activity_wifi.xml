<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.WirelessData.WifiActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/speedWifi"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/speedDownload"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/speed"/>
        <Button
                android:text="Ping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonWifi"/>
        <Button
                android:text="Download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonDownload"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>